generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model patient {
  id        String   @id @default(uuid())
  dni       Int      @unique
  name      String
  lastName  String
  circles   circle[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model circle {
  id        String   @id @default(uuid())
  name      String
  password  String
  patient   patient  @relation(fields: [patientId], references: [id])
  patientId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
